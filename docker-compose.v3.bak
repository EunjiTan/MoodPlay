version: '3.8'

services:
  redis:
    image: redis:alpine
    ports:
      - "6379:6379"
    networks:
      - moodplay-net

  gateway:
    build:
      context: ./services/gateway
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ./services/gateway:/app
      - ./uploads:/shared/uploads
      - ./results:/shared/results
    environment:
      - CELERY_BROKER_URL=redis://redis:6379/0
      - CELERY_RESULT_BACKEND=redis://redis:6379/0
    depends_on:
      - redis
    networks:
      - moodplay-net

  sam3-worker:
    build:
      context: ./services/sam3
      dockerfile: Dockerfile
    volumes:
      - ./services/sam3:/app
      - ./uploads:/shared/uploads
      - ./results:/shared/results
      - ./checkpoints:/app/checkpoints
    environment:
      - CELERY_BROKER_URL=redis://redis:6379/0
      - CELERY_RESULT_BACKEND=redis://redis:6379/0
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    depends_on:
      - redis
    networks:
      - moodplay-net

networks:
  moodplay-net:
    driver: bridge
